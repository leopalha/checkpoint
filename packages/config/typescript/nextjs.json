{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "CheckPoint Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@checkpoint/types": ["../../packages/types/src"],
      "@checkpoint/utils": ["../../packages/utils/src"],
      "@checkpoint/ui": ["../../packages/ui/src"]
    }
  }
}
