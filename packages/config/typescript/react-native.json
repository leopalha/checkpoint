{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "CheckPoint React Native",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2022"],
    "jsx": "react-native",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"],
      "@checkpoint/types": ["../../packages/types/src"],
      "@checkpoint/utils": ["../../packages/utils/src"]
    }
  }
}
