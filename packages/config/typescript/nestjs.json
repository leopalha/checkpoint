{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "CheckPoint NestJS",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"],
      "@checkpoint/types": ["../../packages/types/src"],
      "@checkpoint/utils": ["../../packages/utils/src"]
    }
  }
}
