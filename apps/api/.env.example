# Server
NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:3001,exp://localhost:8081

# Database
DATABASE_URL=postgresql://checkpoint:checkpoint@localhost:5432/checkpoint?schema=public

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Instagram OAuth
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret
INSTAGRAM_REDIRECT_URI=checkpoint://auth/callback

# Firebase (for push notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# Google Maps (for geo features)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
