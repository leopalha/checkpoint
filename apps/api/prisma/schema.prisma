// CheckPoint Database Schema
// PostgreSQL with PostGIS for geolocation

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [postgis]
}

// ============================================
// USER & AUTH
// ============================================

model User {
  id                   String    @id @default(cuid())
  instagramId          String    @unique
  instagramUsername    String
  name                 String
  bio                  String?
  profilePicture       String?
  defaultIntentions    String[]  @default([])
  isPremium            Boolean   @default(false)
  dailyLikesRemaining  Int       @default(10)
  dailyLikesResetAt    DateTime  @default(now())

  // LGPD
  deletedAt            DateTime?
  deletionScheduledAt  DateTime?

  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  // Relations
  presences            Presence[]
  interactionsSent     Interaction[]  @relation("InteractionFrom")
  interactionsReceived Interaction[]  @relation("InteractionTo")
  matchesAsUser1       Match[]        @relation("MatchUser1")
  matchesAsUser2       Match[]        @relation("MatchUser2")
  messagesSent         Message[]

  @@index([instagramUsername])
  @@index([deletionScheduledAt])
}

model RefreshToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([expiresAt])
}

model DeviceToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  platform  String   // ios, android

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

// ============================================
// EVENTS & PRESENCE
// ============================================

model Organizer {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String
  companyName  String?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  events       Event[]
}

model Event {
  id                  String   @id @default(cuid())
  externalId          String?
  source              String   @default("manual") // manual, sympla
  name                String
  description         String?
  imageUrl            String?
  startDate           DateTime
  endDate             DateTime

  // Location
  locationName        String
  locationAddress     String
  latitude            Float
  longitude           Float

  // Settings
  organizerId         String
  themeId             String   @default("social")
  allowedInteractions String[] @default(["fire", "handshake", "highfive"])
  gpsRadius           Int      @default(500) // meters, min 200
  qrCode              String?

  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  // Relations
  organizer           Organizer     @relation(fields: [organizerId], references: [id])
  presences           Presence[]
  interactions        Interaction[]
  matches             Match[]

  @@index([startDate])
  @@index([organizerId])
  @@index([latitude, longitude])
}

model Presence {
  id           String    @id @default(cuid())
  userId       String
  eventId      String
  intentions   String[]
  status       String?

  confirmedAt  DateTime  @default(now())
  checkedInAt  DateTime?
  checkedOutAt DateTime?

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Relations
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  event        Event     @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@unique([userId, eventId])
  @@index([eventId, checkedInAt])
}

// ============================================
// INTERACTIONS & MATCHES
// ============================================

model InteractionType {
  id          String   @id
  name        String
  emoji       String
  description String

  createdAt   DateTime @default(now())
}

model Interaction {
  id          String   @id @default(cuid())
  fromUserId  String
  toUserId    String
  eventId     String
  type        String   // fire, handshake, highfive, etc.

  createdAt   DateTime @default(now())

  // Relations
  fromUser    User     @relation("InteractionFrom", fields: [fromUserId], references: [id], onDelete: Cascade)
  toUser      User     @relation("InteractionTo", fields: [toUserId], references: [id], onDelete: Cascade)
  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@unique([fromUserId, toUserId, eventId])
  @@index([toUserId, eventId])
}

model Match {
  id              String      @id @default(cuid())
  user1Id         String
  user2Id         String
  eventId         String
  interactionType String
  status          String      @default("pending") // pending, revealed, expired

  revealedAt      DateTime?
  expiresAt       DateTime?

  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  // Relations
  user1           User        @relation("MatchUser1", fields: [user1Id], references: [id], onDelete: Cascade)
  user2           User        @relation("MatchUser2", fields: [user2Id], references: [id], onDelete: Cascade)
  event           Event       @relation(fields: [eventId], references: [id], onDelete: Cascade)
  messages        Message[]

  @@unique([user1Id, user2Id, eventId])
  @@index([user1Id, status])
  @@index([user2Id, status])
  @@index([expiresAt])
}

// ============================================
// CHAT
// ============================================

model Message {
  id        String    @id @default(cuid())
  matchId   String
  senderId  String
  content   String

  readAt    DateTime?
  createdAt DateTime  @default(now())

  // Relations
  match     Match     @relation(fields: [matchId], references: [id], onDelete: Cascade)
  sender    User      @relation(fields: [senderId], references: [id], onDelete: Cascade)

  @@index([matchId, createdAt])
}

// ============================================
// THEMES
// ============================================

model Theme {
  id                  String   @id
  name                String
  description         String
  primaryColor        String
  secondaryColor      String
  emoji               String
  defaultInteractions String[]
  matchMessage        String

  createdAt           DateTime @default(now())
}
